{
  "root": true,
  "extends": ["eslint:recommended", "plugin:prettier/recommended", "plugin:node/recommended"],
  "parserOptions": {
    "ecmaVersion": 2020
  },
  "env": {
    "es6": true,
    "node": true,
    "browser": false
  },
  "rules": {
    "curly": "error",
    "prefer-const": "error",
    "class-methods-use-this": "error",
    "node/file-extension-in-import": ["error"]
  }
}
